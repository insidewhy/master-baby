{
  "name": "master-baby",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "concurrently 'yarn start-server' 'cd client && yarn build && yarn start'",
    "start-server": "ts-node src/index.ts",
    "build": "cd client && yarn build",
    "dev": "concurrently 'yarn dev-server' 'cd client && yarn dev'",
    "dev-server": "nodemon -e ts --watch src --delay 0.3 --exec yarn start-server",
    "lint": "eslint 'src/*.ts'",
    "lint-fix": "yarn lint --fix",
    "run-prettier": "prettier '**/*.{ts,js}'",
    "validate-prettiness": "yarn run-prettier -c",
    "make-prettier": "yarn run-prettier --write",
    "validate": "yarn lint && yarn validate-prettiness",
    "postinstall": "cd client && yarn install"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@types/koa": "^2.11.3",
    "@types/koa-static": "^4.0.1",
    "koa": "^2.11.0",
    "koa-static": "^5.0.0",
    "koa-websocket": "^6.0.0",
    "ts-node": "^8.9.1",
    "yaml": "^1.9.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.1.0",
    "@types/koa-websocket": "^5.0.4",
    "@types/koa__cors": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "concurrently": "^5.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  }
}
